<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <TargetFramework>net8.0</TargetFramework>
    <LangVersion>12</LangVersion>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageReadmeFile>README.md</PackageReadmeFile>

    <Title>MineSharp.Protocol</Title>
    <Authors>psu-de</Authors>
    <Description>Implementation of the Minecraft protocol.</Description>
    <PackageProjectUrl>https://minesharp.io</PackageProjectUrl>
    <PackageIcon>icon.png</PackageIcon>
    <RepositoryUrl>https://github.com/psu-de/MineSharp</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>minecraft, protocol, minecraft-protocol</PackageTags>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>

    <!-- "Win32 Long Path" must be enabled for this because we have really long names. See: https://learn.microsoft.com/en-us/archive/blogs/jeremykuhne/net-4-6-2-and-long-paths-on-windows-10#enabling-win32-long-path-support
    And exceeding MAX_PATH will cause build error. (Visual Studio will crash when trying to open the generated files even if Long Paths are enabled)
    Also see: https://github.com/dotnet/roslyn/issues/48833 -->
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
  </PropertyGroup>

  <ItemGroup>
    <!-- The source generator for the Packet classes -->
    <ProjectReference Include="..\MineSharp.PacketSourceGenerator\MineSharp.PacketSourceGenerator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />

    <ProjectReference Include="..\..\Data\MineSharp.Data\MineSharp.Data.csproj"/>
    <ProjectReference Include="..\..\MineSharp.Core\MineSharp.Core.csproj"/>
    <ProjectReference Include="..\MineSharp.Auth\MineSharp.Auth.csproj"/>
    <ProjectReference Include="..\MineSharp.ChatComponent\MineSharp.ChatComponent.csproj"/>

    <None Include="README.md" Pack="true" PackagePath="\"/>

    <None Include="LICENSE" Pack="true" PackagePath="\"/>
    <None Include="icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="DnsClient" Version="1.7.0"/>
    <PackageReference Include="DotNet.ReproducibleBuilds" Version="1.1.1">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="SharpZipLib" Version="1.4.2"/>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Packets\Clientbound\Handshaking\"/>
  </ItemGroup>

</Project>
